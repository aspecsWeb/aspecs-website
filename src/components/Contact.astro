---
import { socialLinks } from "../lib/sociallinks";
import LinkButton from "../components/LinkButton.astro";

const currentYear = new Date().getFullYear();
---

<section id="contact" class="my-24 px-4">
  <ul class="mt-32 flex flex-wrap justify-center gap-6">
    {
      socialLinks.map(({ name, href, iconClass }) => (
        <li>
          <LinkButton href={href} text={name} iconClass={iconClass} />
        </li>
      ))
    }
  </ul>

  <footer
    class="mt-32 text-center text-zinc-300 text-base font-medium space-y-2"
  >
    <p>
      Â© {currentYear}
      <a href="https://www.aspecs.ch" class="hover:underline">Aspecs</a>. All
      rights reserved.
    </p>
    <p>
      Inspired by <a
        href="https://github.com/alamguardin"
        class="hover:underline">Alam Guardin</a
      >
    </p>
    <a href="/imprint" class="hover:underline">Imprint</a>
  </footer>
</section>
